pipeline {
  agent any
  stages {
    stage('Backup') {
      steps {
        sh """
            JOB_DIR=\$(pwd)
            rm -rf backup
            mkdir backup
            cd /var/jenkins_home/jobs
            find . -type f -name config.xml -exec cp --parent {} \$JOB_DIR/backup \\;
            cd \$JOB_DIR
            git add .
            git commit -m 'Backup of Jenkins jobs'
            """
      }
    }
    stage('Push to repo') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: '3dbc5ed6-22e3-4691-bb09-afd4bf6bbccb', keyFileVariable: 'SSH_KEY')]) {
          withEnv(["GIT_SSH_COMMAND=ssh -o StrictHostKeyChecking=no -i ${SSH_KEY}"]) {
              sh 'git push origin HEAD:master'
          }
        }
      }
    }
  }
}
